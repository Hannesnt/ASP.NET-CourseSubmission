@model RegisterViewModel;


<section class="Forms mt-5">
	<div class="container">
		<div class="row d-flex justify-content-center">
			<div class="col-12 col-lg-6">
				<form method="post" novalidate>
					<div class="row d-flex">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="mb-3 col-6">
							<label asp-for="FirstName" class="form-label"></label>
							<input asp-for="FirstName"  />
							<small><span asp-validation-for="FirstName" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-6">
							<label asp-for="LastName" class="form-label"></label>
							<input asp-for="LastName"/>
							<small><span asp-validation-for="LastName" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-12">
							<label asp-for="Email" class="form-label"></label>
							<input asp-for="Email" />
							<small><span asp-validation-for="Email" class="text-danger"></span></small>
						</div>
						<div class="mb-3">
							<label asp-for="Password" class="form-label"></label>
							<input asp-for="Password" />
							<small><span asp-validation-for="Password" class="text-danger"></span></small>
						</div>
						<div class="mb-3">
							<label asp-for="ConfirmPassword" class="form-label"></label>
							<input asp-for="ConfirmPassword"  />
							<small><span asp-validation-for="ConfirmPassword" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-12">
							<label asp-for="StreetName" class="form-label"></label>
							<input asp-for="StreetName" />
							<small><span asp-validation-for="StreetName" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-6">
							<label asp-for="PostalCode" class="form-label"></label>
							<input asp-for="PostalCode" />
							<small><span asp-validation-for="PostalCode" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-6">
							<label asp-for="City" class="form-label"></label>
							<input asp-for="City" />
							<small><span asp-validation-for="City" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-6">
							<label asp-for="Phone" class="form-label"></label>
							<input asp-for="Phone"/>
							<small><span asp-validation-for="Phone" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-6">
							<label asp-for="Company" class="form-label"></label>
							<input asp-for="Company"/>
							<small><span asp-validation-for="Company" class="text-danger"></span></small>
						</div>
						<div class="mb-3 col-12">
							<label asp-for="ProfileImage" class="form-label"></label>
							<input asp-for="ProfileImage"  />
							<small><span asp-validation-for="ProfileImage" class="text-danger"></span></small>
						</div>
						<button class="btn btn-success mt-2" type="submit">Registera</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</section>