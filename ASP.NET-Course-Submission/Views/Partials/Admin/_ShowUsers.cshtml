@using ASP.NET_Course_Submission.Helpers.Services;
@model ProfileViewModel
@inject UserService _userService
@{
	ViewData["Title"] = "All users";
	var roles = await _userService.GetRolesAsync();
}

<div class="col-12 col-lg-4 text-center">
	<h6>@Model.FirstName @Model.LastName @Model.RoleName</h6>
	<p>Edit role of @Model.FirstName</p> 
	<div class="d-flex justify-content-center col-12">
		<form method="post">
			<input type="hidden" asp-for="@Model.Id" />
			<div class="col-12  d-flex flex-column justify-content-center">
				<select asp-for="@Model.RoleName" class="form-control roleselect">
					<option value="">--Select a category--</option>
					@foreach (var item in roles)
					{
						<option value=@item.Name>@item.Name</option>
					}

				</select>
				<button type="submit" class="mt-3 btn-theme">Update role</button>
			</div>
		</form>
	</div>
</div>


