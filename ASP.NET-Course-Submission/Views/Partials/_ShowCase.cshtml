@inject ProductService productService;
@{
    var product = await productService.ShowCaseProduct();
}

<section class="showcase">
    <div class="container ">
        <div class="content d-flex justify-content-center flex-column">
            <div class="ingress text-center">WELCOME TO BMARKETO SHOP</div>
            <div class="title text-center">@product.Name</div>
            <div class="d-flex justify-content-center">
            <a class="btn-theme" asp-controller="product" asp-action="Details" asp-route-id="@product.Id">SHOP NOW</a>
            </div>
        </div>
        <div class="content-image">
            <img src="@product.ProductImage" alt="@product.Name">
        </div>
    </div>
</section>
