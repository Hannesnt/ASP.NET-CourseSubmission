@model List<ProductViewModel>

<div class="container">
	<div class="row  my-5 d-flex justify-content-center">
		<div class="mb-5 text-center">
		<h1>All Products</h1>
		</div>
		@foreach (var product in Model)
		{

		<div class="col-12 col-lg-3 text-center d-flex justify-content-center flex-column align-items-center adminProducts">
			<img src="@product.ProductImage" height="80" width="80" alt="@product.Name"/>
			<p>@product.Name</p>
			<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#@product.Id">
				Edit product
			</button>
			<a class="link mt-4" asp-route-id="@product.Id" asp-controller="admin" asp-action="RemoveProduct" >Remove Product</a>
			<form method="post" novalidate >
				<div class="modal fade" id="@product.Id" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
					<div class="modal-dialog">
						<div class="modal-content px-5">
							<div class="modal-header">
								<h1 class="modal-title fs-5" id="exampleModalLabel">@product.Name</h1>
								<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
							</div>
							<div class="modal-body">
								<partial name="/Views/Partials/Forms/_EditProductForm.cshtml" model="product" />
							</div>
						</div>
					</div>
				</div>
			</form>
		</div>

		}
	</div>
</div>
